<!-- banner img + js text -->
<div class="home-banner">
  <div class="image-left">
    <%= image_tag "banner.png", alt: "Le Wagon", width: 700 %>
  </div>
    <span id="banner-typed-text"></span>
</div>

<!-- Card -->
<div class="cards-box">
<div class="cards">
<% @cocktails.each do |cocktail| %>
<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/featured/?{drink},{cocktail}<%= (1..10000).to_a.sample %>)">
  <h3><%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
</div>
 <% end %>
</div>
</div>



