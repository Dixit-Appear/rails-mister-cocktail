<div class="home-banner">
  <h1>COCKTAILS</h1>
</div>
<div class="container d-flex justify-content-around">
<% @cocktails.each do |cocktail| %>

  <div class="card" style="width: 18rem;">
    <img src="https://images.unsplash.com/photo-1531387367216-681093c0279b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1432&q=80" class="card-img-top" alt="...">
    <div class="card-body">

      <h5 class="card-title"><%= cocktail.name%></h5>
      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
      <a href="#" class="btn btn-primary"><%= link_to cocktail.name, cocktail_path(cocktail) %></a>
    </div>
  </div>
  <% end %>
</div>


